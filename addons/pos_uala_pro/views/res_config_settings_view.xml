<odoo>
    <record id="view_res_config_settings_form_uala_pro" model="ir.ui.view">
        <field name="name">res.config.settings.form.uala.pro</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt16 o_settings_container']" position="inside">
                <div class="col-6 col-lg-4">
                    <div class="o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_pos_uala_pro"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_pos_uala_pro"/>
                            <div class="text-muted">
                                Aceptar pagos con una terminal de pago Ual√° Pro en el POS
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
