<odoo>
    <record id="view_res_config_settings_form_uala_pro" model="ir.ui.view">
        <field name="name">res.config.settings.form.uala.pro</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='pos_razorpay_setting']" position="after">
                <setting string="Ualá Pro" help="Aceptar pagos con una terminal de pago Ualá Pro en el POS">
                    <field name="module_pos_uala_pro"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
