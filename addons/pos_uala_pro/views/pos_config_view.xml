      
<odoo>
    <record id="view_pos_config_form_uala_pro" model="ir.ui.view">
        <field name="name">pos.config.form.uala.pro</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt16 o_settings_container' and not(@id)]" position="inside">
                <setting string="Ualá Pro Payment Terminal" help="Aceptar pagos con una terminal de pago Ualá Pro">
                    <field name="iface_uala_pro"/>
                    <group attrs="{'invisible': [('iface_uala_pro','=',False)]}">
                        <field name="uala_pro_api_key" string="API Key"/>
                        <field name="uala_pro_terminal_id" string="Terminal ID"/>
                        <field name="uala_pro_client_id" string="Client ID"/>
                        <field name="uala_pro_client_secret" string="Client Secret" password="True"/>
                        <field name="uala_pro_merchant_id" string="Merchant ID"/>
                        <field name="uala_pro_env" string="Entorno"/>
                    </group>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
