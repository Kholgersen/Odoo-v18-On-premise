<odoo>
    <record id="view_pos_config_form_uala_pro" model="ir.ui.view">
        <field name="name">pos.config.form.uala.pro</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='payment_terminals']" position="inside">
                <div class="col-6 col-lg-4">
                    <div class="o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="iface_uala_pro"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="iface_uala_pro"/>
                            <div class="text-muted">
                                Aceptar pagos con una terminal de pago Ual√° Pro
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='payment_terminals']" position="after">
                <field name="uala_pro_api_key" attrs="{'invisible': [('iface_uala_pro', '=', False)]}"/>
                <field name="uala_pro_terminal_id" attrs="{'invisible': [('iface_uala_pro', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
