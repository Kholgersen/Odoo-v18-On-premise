<odoo>
    <record id="view_pos_config_form_uala_pro" model="ir.ui.view">
        <field name="name">pos.config.form.uala.pro</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='row mt16 o_settings_container' and not(@id)]" position="inside">
                <setting string="Ualá Pro Payment Terminal" help="Aceptar pagos con una terminal de pago Ualá Pro">
                    <field name="iface_uala_pro"/>
                    <field name="uala_pro_api_key" invisible="not iface_uala_pro"/>
                    <field name="uala_pro_terminal_id" invisible="not iface_uala_pro"/>
                    <field name="uala_pro_client_id" invisible="not iface_uala_pro"/>
                    <field name="uala_pro_client_secret" invisible="not iface_uala_pro" password="True"/>
                    <field name="uala_pro_merchant_id" invisible="not iface_uala_pro"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
